<h1 style="text-align: center;">短冊を編集</h1>

<div class="wish-form">
  <%= form_with(model: @wish, data: { turbo: false }) do |f| %>
    <div class="form-group">
        <%= f.label :投稿者 %><br>
        <%= f.text_field :user_name, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :内容 %><br>
        <%= f.text_field :content, class: "form-control" %>
    </div>
    <div class="form-group btn-submit">
      <%= f.submit "更新する", class: "btn-submit" %>
    </div>
  <% end %>
</div>
